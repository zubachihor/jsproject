{
    "compilerOptions": {
        "baseUrl": ".",

        "allowJs": false,
        "resolveJsonModule": true,
        "target": "es2019",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": false,
        "types": [
            "webdriverio/async",
            "mocha",
            "@wdio/cucumber-framework",
            "node",
            "expect-webdriverio"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"outDir": "./build"
    }
}